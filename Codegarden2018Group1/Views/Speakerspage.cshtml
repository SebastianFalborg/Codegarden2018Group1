@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Speakerspage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Shared/_Layout.cshtml";
}
@Html.Partial("_MainBanner")
<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h4 class="headline-space">@Model.Content.Bodytext</h4>
            </div>
        </div>
        <div class="row">
            @{
                foreach (var speaker in Model.Content.Children<SpeakerItem>().Where(x => x.IsVisible()))
                {
                    <a href="@speaker.Url">
                        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6 main-link-block">
                            <div class="link-block-wrap speaker-size">
                                <div class="link-block-image cover" style="background-image: url('@speaker.ContentImage.Url')">
                                    <div class="image-gradient-overlay"></div>
                                </div>
                                <div class="link-block-content">
                                    <h3>@speaker.Headline</h3>
                                    <p>@speaker.GetPropertyValue("subHeadline")</p>
                                </div>
                                <div class="read-more">Read more</div>
                            </div>
                        </div>
                    </a>
                }
            }
        </div>
    </div>
</div>