@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ProgramPage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Shared/_Layout.cshtml";

    var tuesdayProgramList = Model.Content.Children<ProgramItem>().Where(x => x.DateS.Contains("6/6")).OrderBy(x => x.StartTime).ToList();
    List<ProgramItem> wednesdayProgramList = Model.Content.Children<ProgramItem>().Where(x => x.DateS.Contains("7/6")).OrderBy(x => x.StartTime).ToList();
    var thursdayProgramList = Model.Content.Children<ProgramItem>().Where(x => x.DateS.Contains("8/6")).OrderBy(x => x.StartTime).ToList();
    var fridayProgramList = Model.Content.Children<ProgramItem>().Where(x => x.DateS.Contains("9/6")).OrderBy(x => x.StartTime).ToList();

    var locationList = new string[] {"Main Room", "Back Room", "Entrance Room", "Stjerneskibet (The starship)"};
    ProgramItem[] tempProgramList = new ProgramItem[4];
    string currentTime = "";

}

<div class="container-fluid">
    <div class="section">
        
        <div class="container">
            <h2>Tuesday</h2>
            @{
                <div class="row">
                    <div class="col-md-1">
                        <p>Time</p>
                    </div>
                    <div class="col-md-2">
                        <p>@locationList[0]</p>
                    </div>
                    <div class="col-md-2 col-md-offset-1">
                        <p>@locationList[1]</p>
                    </div>
                    <div class="col-md-2 col-md-offset-1">
                        <p>@locationList[2]</p>
                    </div>
                    <div class="col-md-2 col-md-offset-1">
                        <p>@locationList[3]</p>
                    </div>
                </div>

                for (int i = 0; i < tuesdayProgramList.Count; i++)
                {
                    currentTime = tuesdayProgramList[i].StartTime.ToShortTimeString();

                    tempProgramList[Array.IndexOf(locationList, tuesdayProgramList[i].Location)] = tuesdayProgramList[i];

                    if (i == tuesdayProgramList.Count - 1)
                    {
                        @InsertRow(tempProgramList, currentTime)
                    }
                    else if (tuesdayProgramList[i + 1].StartTime.ToShortTimeString() != currentTime)
                    {
                        @InsertRow(tempProgramList, currentTime)
                    }
                }
            }
        </div>

