@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.LoginPage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Shared/_Layout.cshtml";
    if (IsPost)
    {
        if (Request["username"] != null)
        {
            var un = Request["username"];
            var pw = Request["password"];
            if (Members.Login(un, pw))
            {
                Response.Redirect("/Frontpage/");
            }
        }
    }
}

<div class="main-banner fullscreen-banner cover" style="background-image:url('@Model.Content.ContentImage.Url')">
    <div class="image-overlay"></div>
    <div class="banner-content">
        <div class="user-area">
            <h1>Please login</h1>
            @if (!Members.IsLoggedIn())
            {


                <form action="" method="post">
                    <input type="text" name="username" placeholder="Username" required />

                    <input type="password" name="password" placeholder="Password" required />

                    <button type="submit" class="main-link green-btn">Login or die</button>

                </form>

                        @Html.Partial("_CreateUser")

            }
            else
            {
               Response.Redirect("/Frontpage/");
            }
            <span>Or create a user</span>
        </div>
    </div>
</div>
