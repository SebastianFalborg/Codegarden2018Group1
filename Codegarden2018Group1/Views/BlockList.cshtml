@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.BlockList>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Shared/_Layout.cshtml";
    var allBlogs = Model.Content.Children<BlockListItem>()
                 .OrderBy(n => n.CreateDate);
}

@Html.Partial("_MainBanner")
<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                @Model.Content.BlogIntroText
            </div>
        </div>
    </div>
</div>
<div class="section">
    <div class="container">
        <div class="row">

            @foreach (var item in allBlogs)
            {
                <a href="@item.Url">
                    <div class="col-sm-6 col-md-4 col-xs-12 main-link-block">
                        <div class="link-block-wrap">
                            <div class="link-block-image cover" style="background-image: url('@Umbraco.Media(item.GetPropertyValue("linkBlockImage").ToString()).UmbracoFile')">
                                <div class="image-gradient-overlay">
                                </div>
                            </div>
                            <div class="link-block-content">
                                <h3>@item.GetPropertyValue("linkBlockHeadline")</h3>
                            </div>
                            <div class="read-more">Read more</div>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</div>


