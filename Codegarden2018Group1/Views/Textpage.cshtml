@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Textpage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Shared/_Layout.cshtml";
}
<div class="main-banner cover" style="background-image:url('@Model.Content.ContentImage.Url')" data-image-effect>
    <div class="image-overlay"></div>
    <div class="container">
        <div class="row">
            <div class="banner-content">
                <div class="col-xs-12">
                    <h1>@Model.Content.Headline</h1>
                </div>
                <div class="col-xs-12">
                    <p>@Model.Content.Bodytext</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="main-section">
    <div class="container">
        <div class="row">
            <div class="col-md-push-2 col-md-8">
                @Model.Content.MainContent
            </div>
        </div>
    </div>
</div>